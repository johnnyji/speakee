<!DOCTYPE html>
<html>
<head>
  <title>Speakee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'normalize', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="left">
      <%= link_to "Home", root_path %>
    </div>
    <div class="right">
      <% if current_user %>
        <img src=<%= current_user.picture %> class="profile-picture" alt="User's profile picture">
        <div class="profile-links">
          <%= link_to "#{current_user.first_name} #{current_user.last_name}", session_path(current_user) %>
          <%= link_to "Sign out", signout_path, class: "sign-out" %>
        </div>
      <% else %>
        <%= link_to "Sign in with Facebook", "/auth/facebook", class: "sign-in" %>
      <% end %>
    </div>
  </header>
  
  <section>
    <div class="template-container">
      <%= yield %>
    </div>
  </section>

  <footer>
    &copy; 2015 | Johnny Ji | Awesome Footer
  </footer>
</body>
</html>

