var $newConfessionFormContainer = $('.new-form-container');
var $confessionsContainer = $('.school-confessions-container');
var $successMessageDiv = $('.successful-confession-message');
var $confessionTitleError = $('.confession-title-error');
var $confessionBodyError = $('.confession-body-error');

<% if @confession.errors.any? %>
  $confessionTitleError.html('<%= @confession.errors[:title].last %>');
  $confessionBodyError.html('<%= @confession.errors[:body].last %>');
<% else %>
  $newConfession = $('<%= j (render partial: "schools/partials/confession", locals: {confession: @confession}) %>'); 
  $newConfessionFormContainer.slideUp(300); 
  $confessionsContainer.prepend($newConfession);
  $successMessageDiv.text('Your confession was successfully posted!');
<% end %>