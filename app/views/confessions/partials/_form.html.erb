<div class="form-container">
  <%= form_for @confession do |f| %>
    <%= f.text_field :title, placeholder: "Post title" %><br>
    <%= f.text_area :body, placeholder: "Post body" %><br>
    <div class="submit-button">
      <%= f.submit, confirm: "The post can't be changed! You sure?" %>
    </div>
  <% end %>
</div>
